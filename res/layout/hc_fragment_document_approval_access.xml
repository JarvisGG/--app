<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical"
    android:padding="@dimen/medium_margin" >

    <include layout="@layout/back_title_date_time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_child_one"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/right_blue"
            android:gravity="center"
            android:text="未审阅"
            android:textColor="@color/white"
            android:textSize="@dimen/large_textsize" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-10dp"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/msg_indicator"
            android:visibility="gone" />

        <include layout="@layout/line_virtical" />

        <TextView
            android:id="@+id/title_child_two"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已驳回"
            android:textSize="@dimen/large_textsize" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-10dp"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/msg_indicator"
            android:visibility="gone" />

        <include layout="@layout/line_virtical" />

        <TextView
            android:id="@+id/title_child_three"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已通过"
            android:textSize="@dimen/large_textsize" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-10dp"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/msg_indicator"
            android:visibility="gone" />

        <include layout="@layout/line_virtical" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <ListView
        android:id="@+id/unreviewed_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

</LinearLayout>