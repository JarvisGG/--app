<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/back_title_right_white" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_white"
                    android:drawablePadding="@dimen/medium_margin"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/medium_margin" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="身份证号码" />

                <TextView
                    android:id="@+id/id_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_white"
                    android:drawablePadding="@dimen/medium_margin"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/medium_margin" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/medium_margin"
                android:text="上传身份证正面照片" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/medium_margin" >

                <ImageView
                    android:id="@+id/idcard_pic_front_iv"
                    android:layout_width="@dimen/large_height"
                    android:layout_height="@dimen/large_height"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photo" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/medium_margin"
                android:text="上传身份证反面照片" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/medium_margin" >

                <ImageView
                    android:id="@+id/idcard_pic_back_iv"
                    android:layout_width="@dimen/large_height"
                    android:layout_height="@dimen/large_height"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photo" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <TextView
                android:id="@+id/commit_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:layout_marginBottom="@dimen/large_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:background="@drawable/btn_rounded_theme_color"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/large_textsize"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>