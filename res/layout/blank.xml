<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/huge_margin" >

            <TextView
                android:id="@+id/tv_job_title1"
                android:layout_width="300dp"
                android:layout_height="@dimen/small_height"
                android:gravity="bottom"
                android:text="请填写信息"
                android:textSize="@dimen/index_title" />

            <TextView
                android:id="@+id/tv_job_title2"
                android:layout_width="300dp"
                android:layout_height="@dimen/small_height"
                android:layout_below="@id/tv_job_title1"
                android:gravity="bottom"
                android:text="意向岗位" />

            <EditText
                android:id="@+id/et_job_suggestion"
                android:layout_width="300dp"
                android:layout_height="@dimen/small_height"
                android:layout_below="@id/tv_job_title2"
                android:background="@null"
                android:hint="aaaaa"
                android:padding="0dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="300dp"
                android:layout_height="1px"
                android:layout_below="@id/et_job_suggestion"
                android:background="@color/gray5" />

            <View
                android:id="@+id/view2"
                android:layout_width="300dp"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray5" />

            <EditText
                android:id="@+id/et_job_suggestion2"
                android:layout_width="300dp"
                android:layout_height="@dimen/small_height"
                android:layout_alignBottom="@id/view2"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@null"
                android:hint="aaaaa"
                android:padding="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/huge_margin" >

            <View
                android:id="@+id/view3"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/blue" />

            <EditText
                android:id="@+id/et_job_suggestion3"
                android:layout_width="300dp"
                android:layout_height="@dimen/medium_height"
                android:layout_alignBottom="@id/view3"
                android:background="@null"
                android:gravity="left"
                android:hint="原因" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel_submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/medium_margin"
            android:text="取消" />

        <TextView
            android:id="@+id/confirm_submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="140dp"
            android:gravity="center_vertical"
            android:padding="@dimen/medium_margin"
            android:text="提交申请"
            android:textColor="@color/right_blue" />
    </LinearLayout>

</LinearLayout>