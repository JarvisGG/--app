<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/more_gv_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/department_gv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/medium_margin"
            android:text="行政管理部门"
            android:textSize="@dimen/large_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/medium_margin"
            android:text="更多"
            android:textSize="@dimen/medium_textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:padding="@dimen/medium_margin"
            android:src="@drawable/bluejiantou" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_height"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/person_ll_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/medium_height"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/head_gv_one"
                android:layout_width="@dimen/medium_height"
                android:layout_height="@dimen/medium_height"
                android:contentDescription="@null"
                android:padding="@dimen/medium_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_height"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_gv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/large_textsize" />

                <TextView
                    android:id="@+id/job_no_gv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/medium_textsize" />

                <TextView
                    android:id="@+id/position_gv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/medium_textsize" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_ll_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/medium_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/head_gv_two"
                android:layout_width="@dimen/medium_height"
                android:layout_height="@dimen/medium_height"
                android:contentDescription="@null"
                android:padding="@dimen/medium_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_height"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_gv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/large_textsize" />

                <TextView
                    android:id="@+id/job_no_gv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/medium_textsize" />

                <TextView
                    android:id="@+id/position_gv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/medium_textsize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_height"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/person_ll_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/medium_height"
            android:layout_weight="1"
            android:background="@color/gray"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/head_gv_three"
                android:layout_width="@dimen/medium_height"
                android:layout_height="@dimen/medium_height"
                android:contentDescription="@null"
                android:padding="@dimen/medium_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_height"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_gv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/large_textsize" />

                <TextView
                    android:id="@+id/job_no_gv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/medium_textsize" />

                <TextView
                    android:id="@+id/position_gv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/medium_textsize" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_ll_four"
            android:layout_width="0dp"
            android:layout_height="@dimen/medium_height"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/head_gv_four"
                android:layout_width="@dimen/medium_height"
                android:layout_height="@dimen/medium_height"
                android:contentDescription="@null"
                android:padding="@dimen/medium_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_height"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_gv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/large_textsize" />

                <TextView
                    android:id="@+id/job_no_gv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/medium_textsize" />

                <TextView
                    android:id="@+id/position_gv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/medium_textsize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>