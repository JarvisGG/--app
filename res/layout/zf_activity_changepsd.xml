<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    android:orientation="vertical">
    
	<include layout="@layout/zf_menu_titlebar"/>
	
	<Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
	<include layout="@layout/line_horizontal" />
	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:orientation="vertical" >
            

           	<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/olderpsd"
                    android:textSize="@dimen/commonly28" />

                <EditText
                    android:id="@+id/user_oldpsd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:hint="请输入原密码"
                    android:textSize="@dimen/commonly_desc24" />

            </LinearLayout>

            <include layout="@layout/line_horizontal" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/newpsd"
                    android:textSize="@dimen/commonly28" />

                <EditText
                    android:id="@+id/user_newpsd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:hint="请输入新密码"
                    android:textSize="@dimen/commonly_desc24" />

            </LinearLayout>

            <include layout="@layout/line_horizontal" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/repsd"
                    android:textSize="@dimen/commonly28" />

                <EditText
                    android:id="@+id/user_repsd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:hint="请再次输入密码"
                    android:textSize="@dimen/commonly_desc24" />

            </LinearLayout>

            
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/line_horizontal" />
    
    <RelativeLayout 
        android:id="@+id/login_btu_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        
        <Button
            android:id="@+id/next_btu"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/btn_d"
	        android:gravity="center"
	        android:text="确认"
	        android:clickable="false"
	        android:textSize="@dimen/pcenter_text_01"
	        android:textColor="@color/white" />
        
    </RelativeLayout>

	
</LinearLayout>
