<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/space_border"
        layout="@layout/hc_right_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_border"
        android:layout_marginRight="@dimen/space_border"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_upload_all_check1"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="horizontal" />

        <FrameLayout
            android:id="@+id/fl_upload_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2" />
    </LinearLayout>

</LinearLayout>