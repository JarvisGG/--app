<?xml version="1.0" encoding="utf-8"?>
<com.ab.view.pullview.AbPullToRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mPullRefreshView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/sliding_play_view"
                android:layout_width="match_parent"
                android:layout_height="230dp" />
            <!-- com.ab.view.sliding.AbSlidingPlayView -->

            <LinearLayout
                android:id="@+id/center_left_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_margin"
                    android:background="@color/graybackground" />

                <include layout="@layout/line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_height"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/medium_margin" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/center_left_iv"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/small_margin"
                            android:contentDescription="@null"
                            android:src="@drawable/entrust_to_find" />

                        <TextView
                            android:id="@+id/center_left_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="委托找房"
                            android:textSize="@dimen/medium_textsize" />
                    </LinearLayout>

                    <include layout="@layout/line_virtical" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/center_right_iv"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:layout_marginRight="@dimen/small_margin"
                            android:contentDescription="@null"
                            android:src="@drawable/new_estate" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/center_right_tv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="新上房源"
                                android:textSize="@dimen/medium_textsize" />

                            <LinearLayout
                                android:id="@+id/new_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="今日更新"
                                    android:textColor="@color/text_gray_color"
                                    android:textSize="@dimen/small_textsize" />

                                <TextView
                                    android:id="@+id/num_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/theme_color"
                                    android:textSize="@dimen/small_textsize" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="处房源"
                                    android:textColor="@color/text_gray_color"
                                    android:textSize="@dimen/small_textsize" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/line_horizontal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin"
                android:background="@color/graybackground" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/title_one_list_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="推荐房源"
                    android:textSize="@dimen/large_textsize" />

                <TextView
                    android:id="@+id/more_one_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg_white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="更多"
                    android:textSize="@dimen/medium_textsize" />

                <ImageView
                    android:id="@+id/more_one_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/one_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/two_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_margin"
                    android:background="@color/graybackground" />

                <include layout="@layout/line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/title_two_list_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/medium_margin"
                        android:text="未租房源"
                        android:textSize="@dimen/large_textsize" />

                    <TextView
                        android:id="@+id/more_two_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_bg_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/medium_margin"
                        android:text="更多"
                        android:textSize="@dimen/medium_textsize" />

                    <ImageView
                        android:id="@+id/more_two_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_bg_white"
                        android:contentDescription="@null"
                        android:padding="12dp"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/two_content_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</com.ab.view.pullview.AbPullToRefreshView>