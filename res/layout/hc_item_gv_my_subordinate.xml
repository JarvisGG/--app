<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_my_subordinate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/head_my_subordinate"
        android:layout_width="@dimen/medium_height"
        android:layout_height="@dimen/medium_height"
        android:contentDescription="@null"
        android:padding="@dimen/medium_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/medium_height"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name_my_subordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="@dimen/large_textsize" />

        <TextView
            android:id="@+id/job_no_my_subordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/position_my_subordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

</LinearLayout>