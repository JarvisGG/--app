<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/back_title_right_white" />

    <include layout="@layout/line_horizontal" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="姓名" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入您的姓名"
                    android:paddingRight="@dimen/medium_margin"
                    android:singleLine="true" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="手机" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:paddingRight="@dimen/medium_margin"
                    android:singleLine="true" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@drawable/btn_bg_white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="租房周期" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />

                <TextView
                    android:id="@+id/period_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_white"
                    android:gravity="center_vertical|right"
                    android:hint="请选择租房周期"
                    android:paddingRight="@dimen/medium_margin"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/medium_textsize" />

                <ImageView
                    android:id="@+id/period_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="@null"
                    android:paddingRight="@dimen/medium_margin"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="经纪人姓名" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />

                <EditText
                    android:id="@+id/name_broker_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入经纪人姓名"
                    android:paddingRight="@dimen/medium_margin"
                    android:singleLine="true" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="经纪人编号" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />

                <EditText
                    android:id="@+id/broker_no_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入经纪人编号"
                    android:inputType="number"
                    android:paddingRight="@dimen/medium_margin"
                    android:singleLine="true" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="上传身份证照片（正、反面各一张）" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/medium_margin" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正面：" />

                <ImageView
                    android:id="@+id/idcard_pic_front_iv"
                    android:layout_width="@dimen/medium_height"
                    android:layout_height="@dimen/medium_height"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="正面"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/huge_margin"
                    android:text="反面：" />

                <ImageView
                    android:id="@+id/idcard_pic_back_iv"
                    android:layout_width="@dimen/medium_height"
                    android:layout_height="@dimen/medium_height"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photo" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="上传租赁合同照片" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/medium_margin" >

                      <ImageView
                        android:id="@+id/pic1_iv"
                        android:layout_width="@dimen/medium_height"
                        android:layout_height="@dimen/medium_height"
                        android:background="@drawable/btn_bg_white"
                        android:contentDescription="@null"
                        android:padding="@dimen/medium_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_photo" />

                    <ImageView
                        android:id="@+id/pic2_iv"
                        android:layout_width="@dimen/medium_height"
                        android:layout_height="@dimen/medium_height"
                        android:background="@drawable/btn_bg_white"
                        android:contentDescription="@null"
                        android:padding="@dimen/medium_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_photo"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/pic3_iv"
                        android:layout_width="@dimen/medium_height"
                        android:layout_height="@dimen/medium_height"
                        android:background="@drawable/btn_bg_white"
                        android:contentDescription="@null"
                        android:padding="@dimen/medium_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_photo"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/pic4_iv"
                        android:layout_width="@dimen/medium_height"
                        android:layout_height="@dimen/medium_height"
                        android:background="@drawable/btn_bg_white"
                        android:contentDescription="@null"
                        android:padding="@dimen/medium_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_photo"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/pic5_iv"
                        android:layout_width="@dimen/medium_height"
                        android:layout_height="@dimen/medium_height"
                        android:background="@drawable/btn_bg_white"
                        android:contentDescription="@null"
                        android:padding="@dimen/medium_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_photo"
                        android:visibility="gone" />
                </LinearLayout>
            </HorizontalScrollView>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="押几" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />

                <TextView
                    android:id="@+id/deposit_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_white"
                    android:gravity="center_vertical|right"
                    android:hint="请选择押金月数"
                    android:paddingRight="@dimen/medium_margin"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/medium_textsize" />

                <ImageView
                    android:id="@+id/deposit_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="@null"
                    android:paddingRight="@dimen/medium_margin"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/medium_margin" />

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:background="@drawable/btn_bg_white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="付几" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text="*"
                    android:textColor="@color/theme_color" />

                <TextView
                    android:id="@+id/paid_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_white"
                    android:gravity="center_vertical|right"
                    android:hint="请选择付房租月数"
                    android:paddingRight="@dimen/medium_margin"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/medium_textsize" />

                <ImageView
                    android:id="@+id/paid_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg_white"
                    android:contentDescription="@null"
                    android:paddingRight="@dimen/medium_margin"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>

            <include layout="@layout/line_horizontal" />

            <LinearLayout
                android:id="@+id/staging_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_margin" />

                <include layout="@layout/line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/small_height"
                    android:background="@drawable/btn_bg_white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/medium_margin"
                        android:text="分期" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/medium_margin"
                        android:text="*"
                        android:textColor="@color/theme_color" />

                    <TextView
                        android:id="@+id/installment_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg_white"
                        android:gravity="center_vertical|right"
                        android:hint="请选择分期付款期数"
                        android:paddingRight="@dimen/medium_margin"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/medium_textsize" />

                    <ImageView
                        android:id="@+id/installment_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_bg_white"
                        android:contentDescription="@null"
                        android:paddingRight="@dimen/medium_margin"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>

                <include layout="@layout/line_horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_margin" />

                <include layout="@layout/line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/small_height"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/medium_margin"
                        android:text="小白租首付" />

                    <TextView
                        android:id="@+id/down_payment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/medium_margin"
                        android:textColor="@color/theme_color" />
                </LinearLayout>

                <include layout="@layout/line_horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_margin" />

                <include layout="@layout/line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/small_height"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/medium_margin"
                        android:text="小白租分期" />

                    <TextView
                        android:id="@+id/period_xiaobairent_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/medium_margin"
                        android:textColor="@color/theme_color" />
                </LinearLayout>

                <include layout="@layout/line_horizontal" />
            </LinearLayout>

            <TextView
                android:id="@+id/commit_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_height"
                android:layout_marginBottom="@dimen/large_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginTop="@dimen/large_margin"
                android:background="@drawable/btn_rounded_theme_color"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/large_textsize" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>