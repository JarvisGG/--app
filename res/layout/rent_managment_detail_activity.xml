<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <include layout="@layout/back_title_right_white" />

    <include layout="@layout/line_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_margin" />

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="房源"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/source_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="租房日期"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="租金"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/rent_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="分期数"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/times_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="当前期数"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/times_current_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="租客姓名"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/medium_margin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="租客电话"
            android:textSize="@dimen/medium_textsize" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/medium_textsize" />
    </LinearLayout>

    <include layout="@layout/line_horizontal" />

    <TextView
        android:id="@+id/contracts_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:background="@drawable/btn_rounded_theme_color"
        android:gravity="center"
        android:padding="@dimen/medium_margin"
        android:text="查看合同"
        android:textColor="@color/white" />

</LinearLayout>