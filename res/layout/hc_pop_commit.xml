<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/rl_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_commit_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            android:text="提交成功"
            android:textSize="@dimen/index_title" />

        <TextView
            android:id="@+id/tv_commit_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_commit_title1"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="30dp"
            android:text="提交后，文件自动提交显示到经理，进行审批"
            android:textColor="@color/right_blue"
            android:textSize="@dimen/index_title" />

        <TextView
            android:id="@+id/tv_commit_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_commit_content"
            android:layout_marginRight="150dp"
            android:layout_marginTop="60dp"
            android:text="确认"
            android:paddingBottom="30dp"
            android:textColor="@color/right_blue"
            android:textSize="@dimen/index_title" />
        <TextView
            android:id="@+id/tv_commit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_commit_content"
            android:layout_marginTop="60dp"
            android:layout_toLeftOf="@id/tv_commit_ok"
            android:text="取消"
            android:layout_marginRight="70dp"
            android:textSize="@dimen/index_title" />
    </RelativeLayout>

</RelativeLayout>